<div class="container">
  <div class="block hero is-warning">
    <div class="hero-body">
      <p class="title is-2">Quackers</p>
      <p class="subtitle">What you quacked</p>
    </div>
  </div>

  <div class="block card">
    <div class="card-content">
      <p class="title is-4"><%= @blog.content %></p>
    </div>
    <div class="card-footer">
      <p class="card-footer-item"><%= link_to 'Back', blogs_path %></p>
      <p class="card-footer-item"><%= link_to 'Edit', edit_blog_path(@blog) %></P>
      <p class="card-footer-item"><%= link_to 'Delete', blog_path(@blog), method: :delete, data: {confirm:"Are you sure you want to delete this post?"} %></P>
    </div>
  </div>
</div>