<div class="container">
  <div class="columns">
    <div class="column is-2 hero is-info">
      <%= image_tag 'Quackers.png', class: "image is-128x128"%>
    </div>
    <div class="column hero is-info">
      <div class="hero-body">
        <p class="title is-3">Welcome to Quackers</p>
        <p class="subtitle is-5">Quack Out Your Thoughts</p>
      </div>
    </div>
  </div>

  <% if flash[:notice] %>
    <div class="block notification">
      <%= flash[:notice] %>
    </div>
  <% end %>
  
  <div class="block button is-warning is-rounded">
    <%= link_to 'New Quack', new_blog_path %>
  </div>

  <div class="block columns is-multiline">
    <% @blog.each do |blog|%>
        <div class="column is-4">
          <div class="card">
            <div class="card-content">
              <p class="title is-4"><%= blog.content %></p>
              <p class="subtitle is-6">Creared <%= distance_of_time_in_words(blog.created_at, Time.now)%> ago</p>
            </div>
            <div class="card-footer">
              <p class="card-footer-item"><%= link_to 'View', blog_path(blog) %></P>
              <p class="card-footer-item"><%= link_to 'Edit', edit_blog_path(blog) %></P>
              <p class="card-footer-item"><%= link_to 'Delete', blog_path(blog), method: :delete, data: {confirm:"Are you sure you want to delete this post?"} %></P>
            </div>
          </div>
        </div>
    <% end %>
  </div>

  <div class="block">
    <%= render 'footer' %>
  </div>
</div>