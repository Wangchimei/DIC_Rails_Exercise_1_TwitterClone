<h1>Welcome to Quackers</h1>
<div><%= link_to 'New Quack', new_blog_path, class: 'btn btn-default' %></div>

<div><%= notice %></div>

<div class="body">
  <div class="card">
    <% @blog.each do |blog|%>
    <p class="card-body"><%= blog.content %></p>
    <p><%= link_to 'Edit', edit_blog_path(blog) %></p>
    <p><%= link_to 'Show', blog_path(blog) %></p>
    <p><%= link_to 'Delete', blog_path(blog), method: :delete, data: {confirm:"Are you sure you want to delete this post?"}%></p>
    <% end %>
  </div>  
</div>